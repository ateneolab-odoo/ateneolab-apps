<odoo>
  <data>
  
  	<record id='ateneo_payment_acquirer_form' model='ir.ui.view'>
		<field name='name'>ateneo.payment.acquirer.form</field>
		<field name='model'>payment.acquirer</field>
		<field name='inherit_id' ref='payment.acquirer_form' />
		<field name='arch' type='xml'>
			<xpath expr='//group[@name="acquirer"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'payphone')]}">
                    <field name="url_payphone" attrs="{'required':[('provider','=','payphone')]}"/>
               		<field name="token_payphone" attrs="{'required':[('provider','=','payphone')]}"/>
                </group>
            </xpath>
		</field>
	</record>
  	
  </data>
</odoo>
