<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="hr_rule_commission" model="hr.salary.rule">
            <field name="name">Commissions</field>
            <field name="sequence" eval="10"/>
            <field name="code">CMM</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="appears_on_payslip" eval="True"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.calculate_commissions_amount(employee) or False</field>
        </record>

        <!-- Salary Structure -->
         <record id="new_structure" model="hr.payroll.structure">
            <field name="code">NSS</field>
            <field name="name">New Salary Structure</field>
            <field eval="[
                    (6, 0, [
                            ref('hr_payroll.hr_rule_basic'),
                            ref('hr_payroll.hr_rule_taxable'),
                            ref('hr_rule_commission'),
                            ref('hr_payroll.hr_rule_net')
                        ])
                    ]"
                   name="rule_ids"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
    </data>
</odoo>
